{
  "name": "Iggy",
  "address": "127.0.0.1:8080",
  "watcher": {
    "enabled": true,
    "interval": 30
  },
  "system": {
    "path": "local_data",
    "stream": {
      "path": "streams",
      "topic": {
        "path": "topics",
        "partition": {
          "messages_required_to_save": 1000,
          "messages_buffer": 1048576,
          "segment": {
            "size_bytes": 100000000,
            "cache_indexes": true,
            "cache_time_indexes": true
          }
        }
      }
    }
  }
}