{
  "quic": {
    "enabled": true,
    "address": "127.0.0.1:8080"
  },
  "http": {
    "enabled": true,
    "address": "127.0.0.1:3000"
  },
  "message_saver": {
    "enabled": true,
    "interval": 1000
  },
  "system": {
    "path": "local_data",
    "stream": {
      "path": "streams",
      "topic": {
        "path": "topics",
        "partition": {
          "messages_required_to_save": 10000,
          "messages_buffer": 1048576,
          "segment": {
            "size_bytes": 1000000000,
            "cache_indexes": true,
            "cache_time_indexes": true
          }
        }
      }
    }
  }
}